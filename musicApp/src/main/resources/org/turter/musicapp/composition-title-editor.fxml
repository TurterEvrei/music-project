<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.turter.musicapp.ui.modal.composition.titleeditor.CompositionTitleEditorController"
            prefWidth="350" prefHeight="150">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Введите новое название:" />
            <TextField fx:id="titleField" promptText="Новое название" />
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="confirmButton" text="Сохранить" disable="true" onAction="#handleConfirm"/>
            <Button text="Отмена" onAction="#handleCancel"/>
        </HBox>
    </bottom>
</BorderPane>
